{
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "typeRoots": [
      "node_modules/@types",
      ".api/v2.6.0/PowerBI-visuals.d.ts"
    ],
    "lib": [
      "DOM",
      "ES6",
      "ES2015.Promise",
      "ES2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": ".tmp",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/visual.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".tmp",
    "dist"
  ]
}